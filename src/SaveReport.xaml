<Window x:Class="GetBackToWork.SaveReport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Save Report" 
    Background="{StaticResource BackgroundBrush}" BorderBrush="#282828" BorderThickness="1" Padding="0" Margin="0"
    Height="300" Width="300">
    <Grid Margin="10">
        <Grid VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" Name="label1" Height="25" Content="Start Date" />
            <Toolkit:DatePicker Grid.Column="1" Grid.Row="0" Name="StartDatePicker" Height="25" HorizontalAlignment="Stretch" xmlns:Toolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit" SelectedDateChanged="StartDatePicker_SelectedDateChanged" />
            <Label Grid.Column="0" Grid.Row="1" Name="label2" Height="25" Content="End Date" />
            <Toolkit:DatePicker Grid.Column="1" Grid.Row="1" Name="EndDatePicker" Height="25" HorizontalAlignment="Stretch" xmlns:Toolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit" SelectedDateChanged="EndDatePicker_SelectedDateChanged" />
        </Grid>
        <Button Name="SaveButton" Content="Save" Click="SaveButton_Click" VerticalAlignment="Bottom" />
    </Grid>
</Window>
