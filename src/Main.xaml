<Window x:Class="GetBackToWork.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Main" Height="75" Width="325" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" 
    Background="{StaticResource BackgroundBrush}" BorderBrush="#282828" BorderThickness="1" Padding="0" Margin="0"
    Closing="Window_Closing" Visibility="Hidden">
    <Grid Margin="10">
        <Button Name="GoButton" Content="Start" Height="40" Width="80" HorizontalAlignment="Right" VerticalAlignment="Center" Click="GoButton_Click" />
        <Label Content="Client" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" />
        <ComboBox Name="ClientComboBox" VerticalAlignment="Top" Margin="45,0,101,10" />
        <Label Content="Notes" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="45" />
        <TextBox Name="NotesTextBox" VerticalAlignment="Bottom" Margin="45,0,101,0" />
    </Grid>
</Window>
